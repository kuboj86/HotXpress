<Page x:Class="HotXpress.Home_Screen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotXpress"
      mc:Ignorable="d" 
      d:DesignHeight="1792" d:DesignWidth="828"
      Title="Home_Screen" Width="828" Height="1792">

    <Grid Width="828" Height="1792">
        <Frame x:Name="HomeScreenFrame" 
               Background="#FF8D7B7B" 
               Width="828" Height="1792" 
               Content=""
         />
        <Button Content="Menu" HorizontalAlignment="Center" 
                Margin="0,669,0,0" VerticalAlignment="Top" 
                Width="300" Height="100" 
                Background="LightCoral"
                Foreground="WhiteSmoke"
                FontFamily="Arial"
                FontSize="40"
                Click="nav_ToMenu">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Page>
